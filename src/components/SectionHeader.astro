---
const { eyebrow, title, subtitle } = Astro.props;
---

<div class="max-w-3xl">
  {eyebrow && (
    <div class="mb-2 text-xs font-semibold uppercase tracking-[0.18em] text-neutral-500">
      {eyebrow}
    </div>
  )}
  <h2 class="text-2xl font-semibold tracking-tight text-neutral-900 md:text-3xl">{title}</h2>
  {subtitle && <p class="mt-3 text-neutral-600 md:text-lg">{subtitle}</p>}
</div>