---
const { eyebrow, title, subtitle, align = "left" } = Astro.props;
const isCenter = align === "center";
---

<div class:list={["max-w-3xl", isCenter && "mx-auto text-center"]}>
  {eyebrow && (
    <div class="mb-3 inline-flex rounded-full border border-[color:var(--border)] bg-white px-3 py-1 text-[11px] font-semibold uppercase tracking-[0.16em] text-slate-500">
      {eyebrow}
    </div>
  )}
  <h2 class="text-balance text-[length:var(--h2-size)] font-semibold text-slate-900">{title}</h2>
  {subtitle && <p class="mt-3 text-base leading-7 text-slate-600 md:text-lg">{subtitle}</p>}
</div>
