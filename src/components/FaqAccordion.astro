---
type Faq = { q: string; a: string };
const { items = [] } = Astro.props as { items: Faq[] };
---

<div class="space-y-3">
  {items.map((item) => (
    <details class="group card-base p-4 open:shadow-[var(--shadow-elevated)]">
      <summary class="flex cursor-pointer list-none items-center justify-between gap-4">
        <span class="font-medium text-neutral-900">{item.q}</span>
        <span class="text-neutral-500 transition group-open:rotate-45">+</span>
      </summary>
      <p class="mt-3 text-sm leading-6 text-neutral-600">{item.a}</p>
    </details>
  ))}
</div>