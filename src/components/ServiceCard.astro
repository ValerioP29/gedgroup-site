---
const { service } = Astro.props;
---

<a
  href={`/servizi/${service.slug}`}
  class="group rounded-2xl border border-black/5 bg-white p-5 shadow-sm transition hover:-translate-y-1 hover:shadow-md"
>
  <div class="flex items-start justify-between gap-3">
    <div class="text-2xl">{service.icon}</div>
    <span class="rounded-full bg-neutral-100 px-2 py-1 text-xs text-neutral-600">
      Servizio
    </span>
  </div>

  <h3 class="mt-4 text-lg font-semibold text-neutral-900">{service.title}</h3>
  <p class="mt-2 text-sm leading-6 text-neutral-600">{service.short}</p>

  <div class="mt-4 inline-flex items-center gap-2 text-sm font-medium text-neutral-900">
    Scopri di più
    <span class="transition group-hover:translate-x-1">→</span>
  </div>
</a>