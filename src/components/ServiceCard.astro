---
const { service } = Astro.props;
---

<a href={`/servizi/${service.slug}`} class="card-base card-hover group block p-5 md:p-6">
  <div class="flex items-start justify-between gap-3">
    <div class="text-2xl">{service.icon}</div>
    <span class="rounded-full border border-[color:var(--border)] bg-slate-50 px-2.5 py-1 text-xs text-slate-600">
      Servizio
    </span>
  </div>

  <h3 class="mt-4 text-lg font-semibold text-slate-900">{service.title}</h3>
  <p class="mt-2 text-sm leading-6 text-slate-600">{service.short}</p>

  <div class="mt-5 inline-flex items-center gap-2 text-sm font-semibold text-slate-900">
    Scopri di più
    <span class="transition group-hover:translate-x-1">→</span>
  </div>
</a>
