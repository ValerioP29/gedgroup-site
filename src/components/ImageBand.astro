---
const { title, subtitle, images = [] } = Astro.props as {
  title?: string;
  subtitle?: string;
  images?: Array<{ src: string; alt: string; ratio?: "4/3" | "3/2" | "1/1" }>;
};

const hasImages = images.length > 0;
---

{hasImages && (
  <section class="section-y">
    <div class="site-container">
      {(title || subtitle) && (
        <div class="mb-5">
          {title && <h2>{title}</h2>}
          {subtitle && <p class="mt-2 max-w-3xl text-slate-600">{subtitle}</p>}
        </div>
      )}
      <div class="grid gap-3 md:grid-cols-3" data-stagger="image-band">
        {images.map((image) => (
          <figure class="card-base card-hover overflow-hidden" data-stagger-item data-reveal="clip-up">
            <img
              src={image.src}
              alt={image.alt}
              class="band-media"
              style={`aspect-ratio:${image.ratio ?? "4/3"};`}
              loading="lazy"
              decoding="async"
            />
          </figure>
        ))}
      </div>
    </div>
  </section>
)}

{!hasImages && (title || subtitle) && (
  <section class="py-6 md:py-8">
    <div class="site-container">
      <div class="card-base p-4 md:p-5 text-sm text-slate-600">
        {title && <h2 class="text-lg font-semibold text-slate-900">{title}</h2>}
        {subtitle && <p class="mt-2">{subtitle}</p>}
      </div>
    </div>
  </section>
)}
