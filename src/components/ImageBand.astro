---
const { title, subtitle, images } = Astro.props as {
  title?: string;
  subtitle?: string;
  images: Array<{ src: string; alt: string; ratio?: "4/3" | "3/2" | "1/1" }>;
};
---

<section class="section-y">
  <div class="site-container">
    {(title || subtitle) && (
      <div class="mb-5">
        {title && <h2>{title}</h2>}
        {subtitle && <p class="mt-2 max-w-3xl text-slate-600">{subtitle}</p>}
      </div>
    )}
    <div class="grid gap-3 md:grid-cols-3" data-stagger="image-band">
      {images.map((image) => (
        <figure class="card-base overflow-hidden" data-stagger-item>
          <img
            src={image.src}
            alt={image.alt}
            class="band-media"
            style={`aspect-ratio:${image.ratio ?? "4/3"};`}
            loading="lazy"
            decoding="async"
          />
        </figure>
      ))}
    </div>
  </div>
</section>
