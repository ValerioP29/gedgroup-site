---
const { name, class: className = "" } = Astro.props as {
  name: "phone" | "whatsapp" | "clipboard" | "arrow-right" | "mail" | "clock" | "map-pin";
  class?: string;
};
---

{name === "phone" && (
  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round" class={className} aria-hidden="true">
    <path d="M22 16.92v3a2 2 0 0 1-2.18 2A19.8 19.8 0 0 1 3.09 5.18 2 2 0 0 1 5.06 3h3a2 2 0 0 1 2 1.72c.12.9.33 1.78.62 2.63a2 2 0 0 1-.45 2.11L9.1 10.59a16 16 0 0 0 4.31 4.31l1.13-1.13a2 2 0 0 1 2.11-.45c.85.29 1.73.5 2.63.62A2 2 0 0 1 22 16.92z"/>
  </svg>
)}

{name === "whatsapp" && (
  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round" class={className} aria-hidden="true">
    <path d="M20.5 11.5A8.5 8.5 0 0 1 7.9 19l-3.4 1 1.1-3.2A8.5 8.5 0 1 1 20.5 11.5Z"/>
    <path d="M8.8 9.7c.2-.5.5-.5.7-.5h.6c.2 0 .4 0 .5.3l.6 1.4c.1.2 0 .4-.1.5l-.4.5c-.1.1-.2.3-.1.5.2.4.6 1 1.2 1.6.7.6 1.3 1 1.8 1.1.2.1.4 0 .5-.1l.5-.6c.1-.2.3-.2.5-.2l1.3.6c.2.1.3.2.3.4v.7c0 .2-.1.5-.4.6-.4.2-1 .3-1.6.2-.7-.1-1.6-.4-2.8-1.4-1.3-1-2.1-2.1-2.4-3.3-.2-.7-.1-1.3 0-1.8Z"/>
  </svg>
)}

{name === "clipboard" && (
  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round" class={className} aria-hidden="true">
    <rect x="9" y="3" width="6" height="4" rx="1"/>
    <path d="M9 5H7a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V7a2 2 0 0 0-2-2h-2"/>
    <path d="m9 14 2 2 4-4"/>
  </svg>
)}

{name === "arrow-right" && (
  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round" class={className} aria-hidden="true">
    <path d="M5 12h14"/>
    <path d="m13 5 7 7-7 7"/>
  </svg>
)}

{name === "mail" && (
  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round" class={className} aria-hidden="true">
    <rect x="3" y="5" width="18" height="14" rx="2"/>
    <path d="m3 7 9 6 9-6"/>
  </svg>
)}

{name === "clock" && (
  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round" class={className} aria-hidden="true">
    <circle cx="12" cy="12" r="9"/>
    <path d="M12 7v5l3 2"/>
  </svg>
)}

{name === "map-pin" && (
  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round" class={className} aria-hidden="true">
    <path d="M12 21s-6-5.3-6-11a6 6 0 1 1 12 0c0 5.7-6 11-6 11Z"/>
    <circle cx="12" cy="10" r="2.2"/>
  </svg>
)}
