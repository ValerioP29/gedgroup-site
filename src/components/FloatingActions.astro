---
import { site, getWhatsAppUrl } from "../data/site";
---

<div class="fixed bottom-[max(1rem,env(safe-area-inset-bottom))] right-[max(1rem,env(safe-area-inset-right))] z-40 flex flex-col gap-2">
  <a
    href={getWhatsAppUrl()}
    target="_blank"
    rel="noopener"
    class="btn btn-whatsapp tap-target shadow-lg shadow-black/10"
    data-track="click_whatsapp"
    aria-label="Apri chat WhatsApp"
  >
    WhatsApp
  </a>
  <a
    href={`tel:${site.phoneHref}`}
    class="btn btn-primary tap-target shadow-lg shadow-black/10"
    data-track="click_phone"
    aria-label="Chiama ora GED Group"
  >
    Chiama ora
  </a>
</div>
