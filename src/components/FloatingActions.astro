---
import { site, getWhatsAppUrl } from "../data/site";
---

<div class="fixed bottom-4 right-4 z-40 flex flex-col gap-2">
  <a
    href={getWhatsAppUrl()}
    target="_blank"
    rel="noopener"
    class="rounded-2xl bg-green-600 px-4 py-3 text-sm font-semibold text-white shadow-lg shadow-black/10 transition hover:translate-y-[-1px] hover:bg-green-700"
    data-track="click_whatsapp"
  >
    WhatsApp
  </a>
  <a
    href={`tel:${site.phoneHref}`}
    class="rounded-2xl bg-neutral-900 px-4 py-3 text-sm font-semibold text-white shadow-lg shadow-black/10 transition hover:translate-y-[-1px] hover:bg-black"
    data-track="click_phone"
  >
    Chiama ora
  </a>
</div>