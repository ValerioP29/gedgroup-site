---
import Layout from "../../layouts/Layout.astro";
import PageHero from "../../components/PageHero.astro";
import ServiceCardsGrid from "../../components/ServiceCardsGrid.astro";
import SplitSection from "../../components/SplitSection.astro";
import FinalCTA from "../../components/FinalCTA.astro";
import { services } from "../../data/services";
import { getWhatsAppUrl } from "../../data/site";
import { pageMedia } from "../../data/page-media";

const media = pageMedia.servizi;
---

<Layout
  title="Servizi | GED Group"
  description="Pulizie uffici, condomìni, ambienti industriali e interventi straordinari."
>
  <PageHero
    eyebrow="Servizi"
    title="Servizi di pulizia ordinaria e straordinaria"
    subtitle="Panoramica sintetica dei servizi GED Group: ogni pagina dedicata contiene metodo, settori serviti e casi applicativi."
    breadcrumbs={[{ label: "Home", href: "/" }, { label: "Servizi" }]}
    image={media.hero.image}
  >
    <a slot="actions" href="/contatti" class="btn btn-primary">Richiedi preventivo</a>
    <a
      slot="actions"
      href={getWhatsAppUrl("Ciao GED Group, vorrei informazioni sui vostri servizi.")}
      target="_blank"
      rel="noopener"
      class="btn btn-secondary"
      data-track="click_whatsapp"
    >
      Consulenza rapida
    </a>
  </PageHero>

  <ServiceCardsGrid
    eyebrow="Catalogo"
    title="Seleziona il servizio più adatto"
    subtitle="Card visuali con mini anteprime: entra nelle schede per vedere dettagli e processo dedicato."
    services={services}
  />

  <SplitSection
    eyebrow="Metodo"
    title="Processo sintetico, attivazione rapida"
    body={[
      "Ogni nuova commessa segue una traccia chiara: analisi, capitolato, avvio e monitoraggio.",
      "Riduciamo complessità e allineiamo subito frequenze, responsabilità e canali di contatto.",
    ]}
    bullets={[
      "Sopralluogo tecnico",
      "Proposta personalizzata",
      "Coordinamento operativo",
      "Verifiche qualità",
    ]}
    image={services[0].detailImages[0]}
    reverse={true}
  />

  <FinalCTA
    title="Hai già un capitolato o vuoi partire da zero?"
    subtitle="Ti aiutiamo a definire frequenze, attività e piano qualità con una proposta concreta."
    whatsappText="Ciao GED Group, vorrei impostare una proposta servizi su misura."
  />
</Layout>
