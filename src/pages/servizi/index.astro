---
import Layout from "../../layouts/Layout.astro";
import InternalPageHero from "../../components/InternalPageHero.astro";
import SectionHeader from "../../components/SectionHeader.astro";
import ServiceCard from "../../components/ServiceCard.astro";
import FinalCtaBand from "../../components/FinalCtaBand.astro";
import { services } from "../../data/services";
import { getWhatsAppUrl } from "../../data/site";
---

<Layout
  title="Servizi | GED Group"
  description="Pulizie uffici, condomìni, ambienti industriali e interventi straordinari."
>
  <InternalPageHero
    eyebrow="Servizi"
    title="Servizi di pulizia ordinaria e straordinaria"
    subtitle="Un catalogo chiaro per scegliere il servizio giusto, con processi operativi pensati per aziende, condomìni e contesti ad alta esigenza."
    breadcrumbs={[{ label: "Home", href: "/" }, { label: "Servizi" }]}
  >
    <a slot="actions" href="/contatti" class="btn btn-primary">Richiedi preventivo</a>
    <a
      slot="actions"
      href={getWhatsAppUrl("Ciao GED Group, vorrei informazioni sui vostri servizi.")}
      target="_blank"
      rel="noopener"
      class="btn btn-secondary"
      data-track="click_whatsapp"
    >
      Consulenza rapida
    </a>
  </InternalPageHero>

  <section class="section-y">
    <div class="site-container">
      <SectionHeader
        eyebrow="Panoramica"
        title="Scegli il servizio più adatto alla tua struttura"
        subtitle="Ogni scheda servizio include benefici, processo, FAQ e call to action dedicate alla conversione."
      />

      <div class="mt-8 grid gap-4 md:grid-cols-2 xl:grid-cols-4" data-stagger="services-grid">
        {services.map((service) => (
          <div data-stagger-item>
            <ServiceCard service={service} />
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="section-y surface-section">
    <div class="site-container">
      <div class="grid gap-6 lg:grid-cols-[0.9fr_1.1fr] lg:items-start">
        <div class="panel" data-reveal="fade-right">
          <SectionHeader
            eyebrow="Metodo"
            title="Come impostiamo ogni nuova commessa"
            subtitle="Workflow operativo pensato per essere chiaro per il cliente e sostenibile per il team sul campo."
          />
        </div>

        <ol class="grid gap-3 sm:grid-cols-2" data-stagger="process-grid">
          {[
            "Sopralluogo e analisi esigenze",
            "Proposta con frequenze e capitolato",
            "Avvio servizio e coordinamento",
            "Controlli qualità e supporto continuo",
          ].map((step, idx) => (
            <li class="card-base p-4" data-stagger-item>
              <p class="text-xs uppercase tracking-[0.16em] text-slate-500">Step {idx + 1}</p>
              <p class="mt-2 text-sm font-medium text-slate-700">{step}</p>
            </li>
          ))}
        </ol>
      </div>
    </div>
  </section>

  <FinalCtaBand
    title="Hai già un capitolato o vuoi partire da zero?"
    subtitle="Ti aiutiamo a definire frequenze, attività e piano di controllo qualità con una proposta concreta."
    whatsappText="Ciao GED Group, vorrei impostare una proposta servizi su misura."
  />
</Layout>
