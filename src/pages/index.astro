---
import Layout from "../layouts/Layout.astro";
import PageHero from "../components/PageHero.astro";
import ServiceCardsGrid from "../components/ServiceCardsGrid.astro";
import SplitSection from "../components/SplitSection.astro";
import ImageBand from "../components/ImageBand.astro";
import FinalCTA from "../components/FinalCTA.astro";
import { site, getWhatsAppUrl } from "../data/site";
import { services } from "../data/services";
import { pageMedia } from "../data/page-media";

const media = pageMedia.home;
---

<Layout
  title={`${site.companyName} | Pulizie professionali per aziende e condomìni`}
  description="Servizi di pulizia ordinaria e straordinaria per uffici, condomìni, ambienti industriali e strutture professionali."
  preloadImage={media.hero.image.src}
>
  <PageHero
    variant="home"
    badge="Preventivi rapidi • Referente dedicato • Piani scalabili"
    title="Pulizie professionali con un impatto visibile, ogni giorno"
    subtitle="GED Group supporta aziende, amministratori e strutture con servizi ordinari e straordinari: home orientata all'overview, dettagli completi nelle pagine interne."
    image={media.hero.image}
    preload={true}
  >
    <a slot="actions" href="/contatti" class="btn btn-primary">Richiedi preventivo</a>
    <a
      slot="actions"
      href={getWhatsAppUrl("Ciao GED Group, vorrei un preventivo.")}
      target="_blank"
      rel="noopener"
      class="btn btn-secondary"
      data-track="click_whatsapp"
    >
      Scrivici su WhatsApp
    </a>
    <a slot="actions" href={`tel:${site.phoneHref}`} class="btn btn-ghost" data-track="click_phone">{site.phoneDisplay}</a>
  </PageHero>

  <ServiceCardsGrid
    title="Servizi principali"
    subtitle="Sintesi rapida dei servizi GED Group con mini immagini: il dettaglio completo è nelle singole pagine servizio."
    services={services}
  />

  <SplitSection
    eyebrow="Perché noi"
    title="Metodo operativo chiaro, qualità costante"
    body={[
      "Un unico referente, capitolato condiviso e verifiche periodiche riducono incomprensioni e migliorano la continuità.",
      "Lavoriamo con processi semplici: sopralluogo, proposta, avvio e controllo qualità.",
    ]}
    bullets={[
      "Capitolato trasparente e scalabile",
      "Comunicazione diretta con il referente",
      "Controlli qualità periodici",
    ]}
    image={media.sections.why.image}
  />

  <ImageBand
    title="Risultati e cantieri"
    subtitle="Spazio gallery pensato per foto reali di cantieri, prima/dopo e ambienti gestiti."
    images={media.sections.projects.images}
  />

  <FinalCTA
    title="Vuoi una proposta su misura per la tua struttura?"
    subtitle="Condividi spazi e frequenze: prepariamo un piano operativo chiaro e attivabile in tempi rapidi."
    whatsappText="Ciao GED Group, vorrei una proposta su misura."
  />
</Layout>
