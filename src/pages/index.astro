---
import Layout from "../layouts/Layout.astro";
import PageHero from "../components/PageHero.astro";
import ServiceCardsGrid from "../components/ServiceCardsGrid.astro";
import SplitSection from "../components/SplitSection.astro";
import ImageBand from "../components/ImageBand.astro";
import FinalCTA from "../components/FinalCTA.astro";
import { site, getWhatsAppUrl } from "../data/site";
import { services } from "../data/services";
import { pageMedia } from "../data/page-media";

const media = pageMedia.home;
---

<Layout
  title={`${site.companyName} | Pulizie professionali per aziende e condomìni`}
  description="Servizi di pulizia ordinaria e straordinaria per uffici, condomìni, ambienti industriali e strutture professionali."
  preloadImage={media.hero.image.src}
>
  <PageHero
    variant="home"
    badge="Preventivi rapidi • Referente dedicato • Piani scalabili"
    title="Pulizie professionali con un impatto visibile, ogni giorno"
    subtitle="GED Group affianca aziende e amministratori con servizi di pulizia professionale: qui trovi una panoramica rapida, nelle pagine interne tutti i dettagli operativi."
    image={media.hero.image}
    preload={true}
  >
    <a slot="actions" href="/contatti" class="btn btn-primary">Richiedi preventivo</a>
    <a
      slot="actions"
      href={getWhatsAppUrl("Ciao GED Group, vorrei un preventivo.")}
      target="_blank"
      rel="noopener"
      class="btn btn-secondary"
      data-track="click_whatsapp"
    >
      Scrivici su WhatsApp
    </a>
    <a slot="actions" href={`tel:${site.phoneHref}`} class="btn btn-ghost" data-track="click_phone">{site.phoneDisplay}</a>
  </PageHero>

  <ServiceCardsGrid
    title="I nostri servizi principali"
    subtitle="Tre aree chiave per capire subito se siamo il partner giusto. Nel catalogo servizi trovi la gamma completa."
    services={services}
    maxItems={3}
    cardCtaLabel="Vedi servizio"
  />

  <SplitSection
    eyebrow="Perché noi"
    title="Affidabilità operativa e comunicazione semplice"
    body={[
      "Un referente unico, pianificazione condivisa e verifiche periodiche riducono incomprensioni e migliorano la continuità del servizio.",
      "Ti aggiorniamo con canali chiari e un piano coerente con i ritmi reali della tua struttura.",
    ]}
    bullets={[
      "Referente dedicato",
      "Pianificazione su misura",
      "Controlli qualità programmati",
    ]}
    image={media.sections.why.image}
  />

  <ImageBand
    title="Anteprima dei nostri interventi"
    subtitle="Una selezione rapida dei contesti in cui operiamo. Nei Casi Studio trovi esempi completi con sfida, soluzione e risultati."
    images={media.sections.projects.images}
  />

  <FinalCTA
    title="Vuoi un sopralluogo e una proposta su misura?"
    subtitle="Condividi spazi e frequenze: ti ricontattiamo con una prima valutazione operativa chiara."
    whatsappText="Ciao GED Group, vorrei una proposta su misura."
    compact={true}
  />
</Layout>
