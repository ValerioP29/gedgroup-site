---
import Layout from "../layouts/Layout.astro";
import PageHero from "../components/PageHero.astro";
import SplitSection from "../components/SplitSection.astro";
import ImageBand from "../components/ImageBand.astro";
import FinalCTA from "../components/FinalCTA.astro";
import { services } from "../data/services";

const certImages = [services[2].detailImages[0], services[3].detailImages[0], services[0].detailImages[1]];
---

<Layout title="Certificazioni | GED Group" description="Certificazioni, conformità e standard qualitativi.">
  <PageHero
    eyebrow="Certificazioni"
    title="Standard, conformità e procedure documentate"
    subtitle="Pagina dedicata alla parte trust: certificazioni, sicurezza e formazione in formato sintetico e leggibile."
    breadcrumbs={[{ label: "Home", href: "/" }, { label: "Certificazioni" }]}
    image={services[2].heroImage}
  />

  <SplitSection
    eyebrow="Compliance"
    title="Framework qualità in 3 aree"
    body={[
      "Certificazioni e policy interne vengono mantenute allineate ai requisiti dei clienti corporate.",
      "La documentazione è organizzata per audit, onboarding fornitore e gare.",
    ]}
    bullets={[
      "Qualità del servizio (es. ISO 9001)",
      "Gestione ambientale e procedure",
      "Sicurezza operativa e formazione team",
    ]}
    image={services[3].detailImages[1]}
  />

  <section class="surface-section section-y">
    <div class="site-container">
      <h2>Metodo documentale sintetico</h2>
      <div class="mt-6 grid gap-3 md:grid-cols-3" data-stagger="cert-method">
        {[
          "Raccolta e aggiornamento attestazioni",
          "Condivisione documenti per cliente/progetto",
          "Verifiche periodiche e azioni correttive",
        ].map((item) => (
          <article class="card-base p-4 text-sm text-slate-600" data-stagger-item>{item}</article>
        ))}
      </div>
    </div>
  </section>

  <ImageBand images={certImages} />

  <FinalCTA
    title="Ti serve documentazione per gara o qualifica fornitore?"
    subtitle="Condividiamo i materiali necessari e impostiamo una proposta operativa coerente con i requisiti richiesti."
    whatsappText="Ciao GED Group, vorrei informazioni su certificazioni e documentazione aziendale."
  />
</Layout>
