---
import Layout from "../layouts/Layout.astro";
import PageHero from "../components/PageHero.astro";
import SplitSection from "../components/SplitSection.astro";
import ImageBand from "../components/ImageBand.astro";
import FinalCTA from "../components/FinalCTA.astro";
import { pageMedia } from "../data/page-media";

const media = pageMedia.chiSiamo;
---

<Layout title="Chi siamo | GED Group" description="Metodo, team e approccio operativo GED Group.">
  <PageHero
    eyebrow="Chi siamo"
    title="Una squadra operativa, non solo un fornitore"
    subtitle="Visione, metodo e responsabilità chiare: qui il dettaglio aziendale senza duplicare i contenuti overview della home."
    breadcrumbs={[{ label: "Home", href: "/" }, { label: "Chi siamo" }]}
    image={media.hero.image}
  />

  <SplitSection
    eyebrow="Mission"
    title="Standard costanti in ambienti dinamici"
    body={[
      "Supportiamo aziende e amministratori con un modello orientato alla continuità: pianificazione, esecuzione e verifiche.",
      "L'obiettivo è mantenere ambienti funzionali e rappresentativi, con processi semplici da monitorare.",
    ]}
    bullets={[
      "Referente dedicato per coordinamento",
      "Routine adattabili a turni e stagionalità",
      "Check qualità programmati",
    ]}
    image={media.sections.mission.image}
  />

  <section class="surface-section section-y">
    <div class="site-container">
      <h2>Metodo in 3 passaggi</h2>
      <ol class="mt-6 grid gap-3 md:grid-cols-3" data-stagger="about-method">
        {[
          "Analisi iniziale e sopralluogo",
          "Piano operativo con frequenze condivise",
          "Monitoraggio e ottimizzazione continua",
        ].map((step, i) => (
          <li class="card-base p-4 text-sm text-slate-600" data-stagger-item>
            <strong class="text-slate-900">0{i + 1}.</strong> {step}
          </li>
        ))}
      </ol>
    </div>
  </section>

  <ImageBand title="Team e operatività" images={media.sections.metodo.images} />

  <FinalCTA
    title="Valutiamo insieme una collaborazione?"
    subtitle="Ti presentiamo il nostro modello operativo in base alle esigenze reali della tua struttura."
    whatsappText="Ciao GED Group, vorrei conoscere meglio il vostro metodo."
  />
</Layout>
