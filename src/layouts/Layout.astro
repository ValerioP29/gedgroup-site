---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import FloatingActions from "../components/FloatingActions.astro";
import "../styles/global.css";
import { site } from "../data/site";
import Tracking from "../components/Tracking.astro";
import GsapInit from "../components/GsapInit.astro";
import { ViewTransitions } from "astro:transitions";

const {
  title = `${site.companyName} | Impresa di pulizie`,
  description = site.tagline,
  noIndex = false,
  preloadImage,
} = Astro.props;

const canonicalUrl = new URL(Astro.url.pathname, site.baseUrl).toString();
---

<!doctype html>
<html lang="it">
  <head>
    <meta charset="UTF-8" />
    <ViewTransitions />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalUrl} />
    {noIndex && <meta name="robots" content="noindex,nofollow" />}
    {preloadImage && <link rel="preload" as="image" href={preloadImage} />}

    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:site_name" content={site.companyName} />
    <meta name="theme-color" content="#111111" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="manifest" href="/site.webmanifest" />

    <meta property="og:image" content={`${site.baseUrl}/og-cover.svg`} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:locale" content="it_IT" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={`${site.baseUrl}/og-cover.svg`} />

    {site.gtmId && (
      <script is:inline>
        {`
          (function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
          new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
          j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
          'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
          })(window,document,'script','dataLayer','${site.gtmId}');
        `}
      </script>
    )}
  </head>

  <body class="min-h-screen antialiased">
    {site.gtmId && (
      <noscript>
        <iframe
          src={`https://www.googletagmanager.com/ns.html?id=${site.gtmId}`}
          height="0"
          width="0"
          style="display:none;visibility:hidden"
        ></iframe>
      </noscript>
    )}

    <div class="relative flex min-h-screen flex-col">
      <Navbar />
      <main id="content" class="flex-1 pb-[4.5rem] pt-0 md:pb-6 md:pt-0">
        <slot />
      </main>
      <Footer />
    </div>

    <FloatingActions />
    <Tracking />
    <GsapInit />
  </body>
</html>
